#!/bin/sh

set -e

filter='.comment.body'

if [ -z "$GITHUB_EVENT_PATH" ]; then
  echo "\$GITHUB_EVENT_PATH" not found
  exit 1
fi

expected="$1"
actual=$(jq -r "$filter" "$GITHUB_EVENT_PATH")

echo "$actual" | grep -Eq "^$expected$" || {
  echo "comment is \"$actual\", not \"$expected\""
  exit 78
}
